<% @page_title = "Login" -%>
<div class= "login-form">
  <h1>LOG IN</h1>
  <%= form_tag(action: :login_attempt,controller: :sessions) do %>
    <%= text_field_tag :username, nil,placeholder: "Enter Username", class: "username-login" %>
    <%= password_field_tag :login_password, nil,placeholder: "Enter Password", class:"password-login" %>
    <%= submit_tag("Log In",class: "btn btn-primary btn-black btn-custom-primary submit-login") %>
  <% end %>
</div>