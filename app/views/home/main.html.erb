<div class="main-home">
	<% if !@rooms.empty? %>
	<div class="col-xs-3 col-sm-3 col-md-3 side-bar">
		<h1 class="rooms-label">Rooms</h1>
		<div class="list-group">
			<% @rooms.each do |room| %>
		  	<a href="/main/<%= room.id%>" class="list-group-item <%= "active" if @currentRoom.id == room.id %>">
		  		<%= room.name %>
		  		<span class="badge">
		  			<%= room.devices.count %>	
		  		</span>
		  	</a>
		  <% end %>
		</div>
	</div>
	<div class="col-xs-9 col-sm-9 col-md-9 devices">
		<h1 class="devices-label">Connected Devices</h1>
		<%= render partial: 'shared/device_row',locals:{type1: "fan",type2:"light"} %>
		<%= render partial:'shared/device_row',locals:{type1: "light",type2:"generic"}%>
	</div>
	<% end %>
</div>